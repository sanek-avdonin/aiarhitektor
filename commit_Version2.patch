+import { Injectable, Logger } from '@nestjs/common';
+import { Repository } from 'typeorm';
+import { Task } from './task.entity';
+import { InjectRepository } from '@nestjs/typeorm';
+import amqp from 'amqplib';
+
+@Injectable()
+export class TasksService {
+  private logger = new Logger(TasksService.name);
+  private rabbitChannel: amqp.Channel | null = null;
+
+  constructor(
+    @InjectRepository(Task)
+    private readonly repo: Repository<Task>
+  ) {
+    this.initRabbit().catch((e) => this.logger.warn('Rabbit init error ' + e));
+  }
+
+  private async initRabbit() {
+    const url = process.env.RABBITMQ_URL || 'amqp://guest:guest@rabbitmq:5672';
+    const conn = await amqp.connect(url);
+    this.rabbitChannel = await conn.createChannel();
+    await this.rabbitChannel.assertExchange('tasks', 'topic', { durable: true });
+    // Start a simple consumer for task.created (for demo)
+    const q = await this.rabbitChannel.assertQueue('', { exclusive: true });
+    await this.rabbitChannel.bindQueue(q.queue, 'tasks', 'task.created');
+    this.rabbitChannel.consume(q.queue, (msg) => {
+      if (msg) {
+        try {
+          const data = msg.content.toString();
+          this.logger.log(`[rabbit consumer] received: ${data}`);
+        } catch (e) {
+          this.logger.error('consumer error', e);
+        } finally {
+          this.rabbitChannel!.ack(msg);
+        }
+      }
+    });
+  }
+
+  async findAll(): Promise<Task[]> {
+    return this.repo.find();
+  }
+
+  async create(data: Partial<Task>): Promise<Task> {
+    const t = this.repo.create(data);
+    const saved = await this.repo.save(t);
+    // publish event
+    try {
+      if (this.rabbitChannel) {
+        const payload = Buffer.from(JSON.stringify({ event: 'task.created', taskId: saved.id, title: saved.title }));
+        this.rabbitChannel.publish('tasks', 'task.created', payload, { persistent: false });
+      }
+    } catch (e) {
+      this.logger.warn('Failed to publish rabbit event: ' + e);
+    }
+    return saved;
+  }
+}
