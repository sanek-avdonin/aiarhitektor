# Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Node Environment
NODE_ENV=development

# Backend Configuration
PORT=3000
BACKEND_API_URL=http://localhost:3000

# Database Configuration (must match docker-compose.yml postgres service)
DB_NAME=aiarchitektor
DB_USER=postgres
DB_PASSWORD=change_me_to_secure_password
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://postgres:change_me_to_secure_password@postgres:5432/aiarchitektor

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# External Services
OLLAMA_URL=http://ollama:11434

# JWT Configuration
JWT_SECRET=your_jwt_secret_min_32_chars_here_change_this

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
